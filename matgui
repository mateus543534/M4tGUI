creditsText.Size = UDim2.new(1, -20, 0, 60)
creditsText.Position = UDim2.new(0, 10, 0, 10)
creditsText.BackgroundTransparency = 1
creditsText.TextColor3 = Color3.fromRGB(255,255,255)
